{
    "compilerOptions": {
        "target": "ES2020",
        "moduleResolution": "node",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "pretty": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": [
        "node_modules",
        "dist/**/*.ts",
        "extractorpack.extconfig.js",
      ],
      "include": [
        "tsup.config.ts",
        "eslint.config.mjs",
        "./src/**/*.ts"
    ]
}
